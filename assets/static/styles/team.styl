.page__team .hero
    background greyColor url('img/content/team/joshua-rodriguez-422768-unsplash_1920px.png') no-repeat top center / cover

  footer 
    background greyColor url('img/content/team/joshua-rodriguez-422768-unsplash_1920px.png') no-repeat bottom center / cover

.team__tabs
  display flex
  justify-content center

  padding 20px 0 44px 0

.team__tab
  position relative
  z-index $z-index1

  &_state_active
    color blackColor
    &::after
      content ''

      position absolute
      bottom 5px
      left 0
      z-index -1

      display block
      width 100%
      height 5px

      background-color yellowColor

  &:not(:last-child)
    margin-right 28px

.team__row
  display flex
  flex-wrap wrap
  justify-content space-between

  margin-bottom 50px

.team__col
  flex-basis 370px
  text-align center
  @media (orientation portrait) and (max-width 1024px)
    flex-basis 310px
  @media (orientation portrait) and (max-width 768px),
  (orientation landscape) and (max-width 1024px)
    flex-basis 48%
  @media (orientation portrait) and (max-width 620px)
    flex-basis 100%

