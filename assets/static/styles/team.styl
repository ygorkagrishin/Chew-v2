.team__col:nth-child(-n+3)
  @media (orientation portrait) and (min-width 620px),
  (orientation landscape) and (min-width 320px)
    margin-bottom 30px

.team__col:not(:last-child) 
  @media (orientation portrait) and (max-width 620px)
    margin-bottom 30px

.team__member
  border 1px solid greyColor

.team-member__ava-container
  position relative
  z-index $z-index1

  padding-top 300px

  background-color greyColor
  overflow hidden
  @media (orientation landscape) and (max-width 720px)
    padding-top 220px

.team-member__ava
  position absolute
  top -25%
  left 0
  z-index $z-index1

  width 100%

.team-member__cont
  padding 30px 0

.team-member__desc
  margin-bottom 12px

.team-member__name
  margin-bottom 5px

  font 18px / 1 baseFont2
  color blackColor 
  @media (orientation portrait) and (max-width 620px),
  (orientation landscape) and (max-width 960px)
    font-size 20px

.team-member__pos
  font-size 12px  

.team__paginator
  width 175px
  margin 0 auto

  text-align center

.team__paginator::after
  content ''
  display table
  clear both

.team__paginator a
  float left
  width 40px
  height 40px

  font 14px / 1 baseFont2
  text-align center
  line-height 40px

  border 1px solid greyColor 
  border-radius 50%

.team__paginator .active
  color blackColor

  background-color yellowColor
  
  border-color yellowColor

.team__paginator a:not(:last-child)
  margin-right 5px

.team__back svg,
.team__forward svg 
  width 14px !important
  fill greyColor

.team__back:hover svg,
.team__forward:hover svg
  fill blackColor