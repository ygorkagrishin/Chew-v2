.team-col:nth-child(-n+3)
  @media (orientation portrait) and (min-width 620px),
  (orientation landscape) and (min-width 320px)
    margin-bottom 30px

.team-col:not(:last-child) 
  @media (orientation portrait) and (max-width 620px)
    margin-bottom 3%

.team-member
  border 1px solid greyColor

.team-member-ava-container
  position relative
  z-index $z-index1

  padding-top 300px

  background-color greyColor
  overflow hidden
  @media (orientation landscape) and (max-width 720px)
    padding-top 220px

.team-member-ava
  position absolute
  top -25%
  left 0
  z-index $z-index1

  width 100%

.team-member-cont
  padding 30px 0

.team-member-desc
  margin-bottom 12px

.team-member-name
  margin-bottom 5px

  font 18px / 1 baseFont2
  color blackColor 
  @media (orientation portrait) and (max-width 620px),
  (orientation landscape) and (max-width 960px)
    font-size 20px

.team-member-pos
  font-size 12px  