.footer
  position relative
  z-index $z-index1

  display flex
  justify-content space-between
  padding 100px 50px 95px 50px
  
  background-color rgba(blackColor,.7)

  &::after
    @extend .hero::after
    background-color rgba(blackColor,.8)
  @media (orientation portrait) and (max-width 1024px)
    padding 7% 3%
  @media (orientation portrait) and (max-width 768px)
    flex-wrap wrap
  
.footer__logo
  @media (orientation portrait) and (max-width 1024px)
    display none

.footer__inf
  display flex
  padding 0 18px
  @media (orientation portrait) and (max-width 480px)
    flex-wrap wrap
    padding 0

.footer__inf li
  flex-basis 150px

  font-size 12px
  color whiteColor
  @media (orientation portrait) and (max-width 480px)
    flex-basis 50%
  p
    font-size 12px
    @media (orientation portrait) and (max-width 768px)
      font-size 10px
  &:not(:last-child)
    margin-right 150px
    @media (orientation portrait) and (max-width 1024px)
      margin-right auto

.footer__inf li:nth-child(-n+2) 
  @media (orientation portrait) and (max-width 480px)
    margin-bottom 5%

.footer__caption
  margin-bottom 18px

  font-size 12px
  text-transform uppercase
  color baseColorFont

.footer__social
  @media (orientation portrait) and (max-width 768px)    
    display none