.footer
  position relative
  z-index $z-index1

  padding 100px 50px 95px 50px
  
  background-color rgba(blackColor,.7)

  &::after
    @extend .page__hero::after
    background-color rgba(blackColor,.8)

.footer__inner
  display flex
  justify-content space-between

.footer__logo
  logo()

.footer__list-inf
  display flex
  padding 0 18px

.footer__item
  flex-basis 150px

  font-size 12px
  color whiteColor
  p
    font-size 12px
  &:not(:last-child)
    margin-right 150px

.footer__caption
  margin-bottom 18px

  font-size 12px
  text-transform uppercase
  color baseColorFont

