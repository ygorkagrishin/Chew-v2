header
  display flex
  align-items center
  justify-content space-between
  
  padding 0 46px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    padding 0 3%

.header__logo
  flex 2
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 960px)
    margin-bottom -20px
  @media (orientation portrait) and (max-width 345px),
  (orientation landscape) and (max-width 960px)
    margin-bottom -8px
      
    