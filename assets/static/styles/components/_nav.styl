.nav button[data-open]
  display none
  width 40px
  height 40px
  
  margin-right 10px

  fill whiteColor
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    display inline-block

.navbar
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    position fixed
    top 0
    left 0
    z-index ($z-index9 + 666)

    width 100%
    height 100%

    background-color rgba(blackColor,.9)

.nav ul
  display flex
  align-items center
  justify-content space-between
  margin-right 42px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    flex-direction column
    justify-content space-around
    
    height inherit
    margin 0


.nav li:not(:last-child)
  margin-right 42px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    margin 0

.nav a
  font 14px / 1 baseFont2
  letter-spacing .6px
  text-transform uppercase
  color whiteColor
  &:hover
    color yellowColor

.navbar + button[data-close]
  position absolute
  top 1%
  right 1%
  z-index $z-index9

  width 40px
  height 40px

  fill whiteColor

.navbar.collapse + button[data-close]
  display none

.navbar.collapse
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    display none