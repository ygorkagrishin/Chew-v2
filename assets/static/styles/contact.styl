.page__cont .hero
  background url('img/content/contact/rob-bye-141857-unsplash_1920px.png') no-repeat center / cover

.cont-connect-sect
  padding 104px 0 101px
  @media (orientation portrait) and (max-width 1024px)
    max-width 700px
    margin 0 auto
  @media (orientation portrait) and (max-width 768px),
  (orientation landscape) and (max-width 1024px)
    padding 15% 0

.cont-connect-row
  display flex
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    flex-wrap wrap

.cont-connect-col:not(:last-child)
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    margin-bottom 10%

.cont-connect-desc
  flex-basis 400px
  padding-right 55px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    flex-basis 100%
    padding-right 0

.cont-connect-desc .heading
  margin-bottom 30px
  text-align left

.cont-connect-desc .heading > .heading__subtitle
  display none

.cont-connect-desc .heading > .heading__title
  margin 0

.cont-connect-text
  margin-bottom 37px

.cont-connect-text p:not(:last-child)
  margin-bottom 24px

.cont-connect-social span 
  margin-right 20px

  font 14px / 1 baseFont2
  text-transform uppercase
  vertical-align 8px
  color blackColor

.cont-connect-form
  position relative
  z-index $z-index1

  flex-basis 770px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    flex-basis 100%

.cont-form-nb
  position absolute
  bottom 15px
  right 0
  
  font 14px / 1 italicFont
  color greyColor
  @media (orientation portrait) and (max-width 480px),
  (orientation landscape) and (max-width 720px)
    display none

.cont-form-rows
  margin-bottom 25px

.cont-form-row
  display flex
  justify-content space-between

.cont-form-row:not(:last-child)
  margin-bottom 30px

.cont-form-col-size-md
  flex-basis 370px
  @media (orientation portrait) and (max-width 1024px),
  (orientation landscape) and (max-width 1024px)
    flex-basis 49%

.cont-form-col-size-lg
  flex-basis 100%

.cont-form-col label
  display block
  margin-bottom 12px

  font 14px / 1 baseFont2
  text-transform uppercase
  color blackColor

.cont-form-col input, textarea
  width 100%
  padding 6px 18px

  font-size 12px

  border 1px solid greyColor

.cont-form-col textarea 
  padding-bottom 0

.cont-form-submit
  padding 0 37px

.visually-mobile-none
  @media (orientation portrait) and (max-width 480px),
  (orientation landscape) and (max-width 720px)
    display none

.cont-info
  background-color blackColor 

.cont-info-row
  display flex
  justify-content space-between

  padding 40px 100px
  @media (orientation portrait) and (max-width 768px)
    padding 5% 0

.cont-info-col
  flex-basis 200px

.cont-info-col
  display flex
  align-items center

.cont-info-pic
  width 70px
  height 70px
  padding 12px

  text-align center

.cont-info-col svg 
  width 100% !important
  height 100% !important
  
  fill whiteColor 

.cont-info-col p
  font-size 12px
  letter-spacing -.1px
  color whiteColor

.page__cont footer
  background url('img/content/contact/rob-bye-141857-unsplash_1920px.png') no-repeat bottom / cover