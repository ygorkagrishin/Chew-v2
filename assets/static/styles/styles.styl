@import 'base/_typography.styl'
@import 'base/_reset.styl'
@import '_var.styl'
@import '_mixin.styl'
@import 'layout/_layout.styl'

@import 'components/_buttons.styl'

.page__hero
  position relative
  z-index $z-index1

  display flex
  flex-direction column
  justify-content space-between

  height 100vh
  padding 30px 0

  background-color rgba(blackColor,.7)
  &::after
    content ''

    position absolute 
    top 0
    left 0
    z-index -1 

    width 100%
    height 100%

    background-color rgba(blackColor,.3)

.page__caption
  font-size 72px
  text-align center
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-bottom -6px

    font 120px / 1 greatFont
    text-transform lowercase
    color yellowColor

.page__inf
  &_align_center
    text-align center

.page__phone
  margin-bottom 12px

  letter-spacing .6px
  font 14px / 1 baseFont2
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-left 6px

    color yellowColor

.social
  social()

.page__main
  padding 150px 0

//146px 0 151px 0 perfect pixel

.page__heading
  max-width 770px
  margin 0 auto

  text-align center

.page__subtitle
  display inline-block
  margin-bottom 50px

  font 14px / 1 baseFont2
  text-transform uppercase
  color blackColor

.page__title
  font-size 48px 
  line-height 1
  text-transform uppercase
  color blackColor

.page__title + p
  margin-top 18px

@import 'homepage.styl'
@import 'our-menu.styl'
@import 'team.styl'
@import 'reservation.styl'
@import 'contact.styl'

@import 'components/_header.styl'
@import 'components/_nav.styl'
@import 'components/_footer.styl'