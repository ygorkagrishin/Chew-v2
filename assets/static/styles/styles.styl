@import 'base/_typography.styl'
@import 'base/_reset.styl'
@import '_var.styl'
@import '_mixin.styl'
@import 'layout/_layout.styl'

@import 'components/_buttons'

.page__hero
  display flex
  flex-direction column
  justify-content space-between

  height 100vh
  padding 30px 0

  background-color rgba(blackColor,.7)

.page__headline
  font-size 72px
  text-align center
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-bottom -6px

    font 120px / 1 greatFont
    text-transform lowercase
    color yellowColor

.page__inf
  &_align_center
    text-align center

.page__phone
  margin-bottom 12px

  letter-spacing .6px
  font 14px / 1 baseFont2
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-left 6px

    color yellowColor

.social
  social()


