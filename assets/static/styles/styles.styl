@import 'base/_typography.styl'
@import 'base/_reset.styl'
@import '_var.styl'
@import '_mixin.styl'
@import 'layout/_layout.styl'

@import 'components/_buttons.styl'

.page__hero
  position relative
  z-index $z-index1

  display flex
  flex-direction column
  justify-content space-between

  height 100vh
  padding 30px 0

  background-color rgba(blackColor,.7)
  &::after
    content ''

    position absolute 
    top 0
    left 0
    z-index -1 

    width 100%
    height 100%

    background-color rgba(blackColor,.3)

.page__caption
  font-size 72px
  text-align center
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-bottom -6px

    font 120px / 1 greatFont
    text-transform lowercase
    color yellowColor

.page__inf
  padding 0 50px
  &_align_center
    text-align center

.page__phone
  margin-bottom 12px

  letter-spacing .6px
  font 14px / 1 baseFont2
  text-transform uppercase
  color whiteColor
  span 
    display inline-block
    margin-left 6px

    color yellowColor

.social
  social()

.icon-scroll,
.icon-scroll:before
  position absolute
  left 50%
  z-index $z-index9

.icon-scroll
  bottom 6%

  width 26px
  height 45px
  margin-left -12px
  margin-top -35px
  
  box-shadow inset 0 0 0 1px #fff
  border-radius 25px

.icon-scroll:before
  content ''
  
  top 8px

  width 3px
  height 3px
  margin-left -1px

  background #fff
  border-radius 4px
  
  animation-duration 1.5s
  animation-iteration-count infinite
  animation-name scroll

@keyframes scroll
  0%
    opacity: 1
  100%
    opacity: 0
    transform: translateY(21px)

.page__main
  padding 150px 0

.page__heading
  max-width 770px
  margin 0 auto

  text-align center

.page__subtitle
  display inline-block
  margin-bottom 50px

  font 14px / 1 baseFont2
  text-transform uppercase
  color blackColor

.page__title
  font-size 48px 
  line-height 1
  text-transform uppercase
  color blackColor

.page__title + p
  margin-top 18px

