extends layout/_layout

block title 
  title chew manager

block content
  .page__team
    +hero('meet', 'our team')

    main
      .page__main.team
        .container
          +contentHeader('meet our staff', 'we love our customers')
          
          ul.tabs.team-tabs
            li.tabs__tab
              a(href="team-page.html") All

            li.tabs__tab
              a(href="team-page-chef.html") Chef
            
            li.tabs__tab
              a(href="team-page-waiter.html") Waiter

            li.tabs__tab.tabs__tab_state_active
              a(href="javascript:void(0);") Manager

          //- team members
          .team-row
            if (managers.length > 0 && Array.isArray(managers))
              each manager in managers
                .team-col
                  +memberOfTheTeam(manager.avatar, manager.name, manager.position, manager.social)
            else
              - var manager = managers
              .team-col 
                +memberOfTheTeam(manager.avatar, manager.name, manager.position, manager.social)
          //- team members end

    include modules/_footer